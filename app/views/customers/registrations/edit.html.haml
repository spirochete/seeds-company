%h2
  Your Account
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, :autofocus => true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p
        Currently waiting confirmation for: #{resource.unconfirmed_email}


    = f.input :first_name, :required => true
    = f.input :last_name, :required => true
    = f.input :address_one, :required => true
    = f.input :address_two
    = f.input :city, :required => true
    = f.input :state_province, label: "State/Province", :required => true
    = f.input :country, :required => true
    = f.input :postal_code, :required => true
    = f.input :business_name
    = f.input :phone_number, :required => true
    
    = f.input :password, :autocomplete => "off", :hint => "Leave blank if you don't want to change your password", :required => false
    = f.input :password_confirmation, :required => false
    = f.input :current_password, :hint => "Your current password is needed to confirm any changes", :required => true
  .form-actions
    = f.button :submit, "Update"
