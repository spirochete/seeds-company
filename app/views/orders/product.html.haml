- model_class = Seed
.page-header
  %h3= "#{@seed.common_name}, #{@seed.variety}"

%p
  %b Name
  = "#{@seed.genus} #{@seed.species}"
  - if @seed.sub_species?
    = "var. #{@seed.sub_species}"

%p
  %b Organic:
  - if @seed.organic?
    = "Yes"
  - else
    = "No"

- if @seed.seed_type?
  %p
    %b Type:
    = @seed.seed_type

- if @seed.days_to_maturity?
  %p
    %b Days to maturity:
    = @seed.days_to_maturity

- if @seed.germination?
  %p
    %b Germ:
    = "#{@seed.germination}%"

- if @seed.origin?
  %p
    %b Origin:
    = @seed.origin

- if @seed.date_acquired?
  %p
    %b Date Acquired:
    = @seed.date_acquired

- if @seed.notes?
  %p
    %b Notes:
    = @seed.notes


- if !@seed.packets.nil?
  %b Packets Available:
  %ul
    - @seed.packets.each do |packet|
      %li
        %b= packet.packet_size
        = "(#{packet.quantity_available})"
        = " - $#{packet.price}"