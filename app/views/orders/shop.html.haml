
- if !params[:search].present? && !params[:cats].present?
  .hero-unit
    %h1 Seeds Company
    %p Check out our seeds, man.
- else
  - if current_page?(categories_path)
    %h3= params[:cats].titleize
  %p
    = @seeds.length
    = @seeds.length == 1 ? 'result' : 'results'

- if @seeds.present?
  .product-block
    %table.table
      %tbody
        - @seeds.each do |seed|
          %tr
            - if seed.photos.present?
              %td.seed-image= link_to image_tag(seed.photos.first.photo_url.url(:thumb)), products_url(:id => seed.id)
            -else
              %td.seed-image= link_to image_tag("default.png"), products_url(:id => seed.id)
            %td.seed-description
              %p.seed-title= link_to "#{seed.common_name}, #{seed.variety} #{seed.organic ? '(OG)' : ''}", products_url(:id => seed.id)
              %p
                %b Type:
                = seed.seed_type
              / If the description is too long, cut its length
              %p= seed.notes.length > 150 ? truncate(seed.notes, :length => 150 ) : seed.notes